extends layout

block content
    .container
        h1 Новый чертеж
        p.lead Заполните по порядку данные поля
        form(role='form', action="/new_drawing", method="post", enctype="multipart/form-data" style='max-width: 500px;')
            .form-group
                label Заголовок
                input.form-control(type='text', name="title" required)
            .form-group
                label Категория
                input.form-control(type='text', name="category" required)
            .form-group
                label Описание
                textarea.form-control(name="description" required)
            .form-group
                label Состав Работы
                input.form-control(type='text', name="drawing_composition")
            .form-group
                label Tags
                input.form-control(type='text', name="tags")
            .form-group
                label Picture
                input(type='file', name="picture")

            button.btn.btn-default(type='submit') Добавить
             &nbsp;
            a(href='/')
                button.btn.btn-danger(type="button") Отменить
